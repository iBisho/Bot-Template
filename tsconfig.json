{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["ES2018"],
		"sourceMap": true,
		"outDir": "./cmp",
		"rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
	}
}